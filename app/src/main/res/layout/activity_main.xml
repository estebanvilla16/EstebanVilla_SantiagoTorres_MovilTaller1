<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.EstebanVilla_SantiagoTorres_MovilTaller1.AppBarOverlay">

    </com.google.android.material.appbar.AppBarLayout>

    <include
        android:id="@+id/include"
        layout="@layout/content_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/TitulotextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="160dp"
        android:layout_marginTop="64dp"
        android:text="Taller 1"
        android:textColor="#2196F3"
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/FiboeditTextNumber"
        android:layout_width="404dp"
        android:layout_height="43dp"
        android:ems="10"
        android:inputType="number"
        android:text="Posiciones"
        android:textAlignment="center"
        android:textColor="#BDBDBD"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button3" />

    <Button
        android:id="@+id/Factorialbutton2"
        android:layout_width="410dp"
        android:layout_height="41dp"
        android:layout_marginTop="40dp"
        android:text="Factorial"
        app:layout_constraintTop_toBottomOf="@+id/FiboeditTextNumber"
        tools:layout_editor_absoluteX="2dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/button3"
        android:layout_width="409dp"
        android:layout_height="39dp"
        android:layout_marginTop="55dp"
        android:text="FIBONACCI"
        app:layout_constraintTop_toBottomOf="@+id/TitulotextView"
        tools:layout_editor_absoluteX="3dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/paises"
        android:layout_width="418dp"
        android:layout_height="42dp"
        android:layout_marginTop="34dp"
        android:text="PAISES"
        app:layout_constraintTop_toBottomOf="@+id/spinner3"
        tools:layout_editor_absoluteX="-4dp"
        tools:ignore="MissingConstraints" />

    <Spinner
        android:id="@+id/spinner3"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        app:layout_constraintTop_toBottomOf="@+id/Factorialbutton2"
        tools:layout_editor_absoluteX="1dp"
        android:entries="@array/countries"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>